<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66fff6"
    tools:context=".Activity_Exercise">

    <TextView
        android:id="@+id/tv_activities_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activities"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/tv_achievement_title"
        android:layout_width="91dp"
        android:layout_height="32dp"
        android:text="Achievement"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_achievement"
        app:layout_constraintEnd_toEndOf="@+id/tv_activities_title"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/tv_activities_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_activities_title"
        app:layout_constraintVertical_bias="0.966" />

    <TextView
        android:id="@+id/tv_point_display"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/circle_display_texture"
        android:text="Point"
        android:gravity="center"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_achievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_achievement"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:background="@drawable/achievement_block_texture"
        android:text="Achievement 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_achievement_title"
        app:layout_constraintEnd_toStartOf="@+id/tv_achievement2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/tv_achievement2"
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:background="@drawable/achievement_block_texture"
        android:text="Achievement 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_achievement"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/long_button_texture"
        android:text="Meal"
        android:stateListAnimator="@null"
        android:onClick="btn_meal_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_point_display" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/long_button_texture"
        android:text="Rest"
        android:stateListAnimator="@null"
        android:onClick="btn_rest_clicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_meal"
        app:layout_constraintVertical_bias="0.785" />

    <ImageView
        android:id="@+id/btn_breakfast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_button_texture"
        android:src="@drawable/breakfast"
        android:onClick="btn_breakfast_clicked"
        android:text="Breakfast"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_rest"
        app:layout_constraintEnd_toStartOf="@+id/btn_lunch"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_meal"
         />


    <ImageView
        android:id="@+id/btn_lunch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_button_texture"
        android:src="@drawable/lunch"
        android:onClick="btn_lunch_clicked"
        android:text="Lunch"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_rest"
        app:layout_constraintEnd_toStartOf="@+id/btn_dinner"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_breakfast"
        app:layout_constraintTop_toBottomOf="@+id/btn_meal" />

    <ImageView
        android:id="@+id/btn_dinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_button_texture"
        android:src="@drawable/dinner"
        android:onClick="btn_dinner_clicked"
        android:text="Dinner"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toTopOf="@+id/btn_rest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_lunch"
        app:layout_constraintTop_toBottomOf="@+id/btn_meal" />

</androidx.constraintlayout.widget.ConstraintLayout>